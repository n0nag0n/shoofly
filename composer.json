{
	"name": "n0nag0n/shoofly",
	"description": "A fork of Fat-Free by Bong Cosca to update and elevate the framework to modern standards.",
	"homepage": "http://fatfreeframework.com/",
	"license": "GPL-3.0",
	"require": {
		"php": ">=7.4"
	},
	"autoload": {
		"psr-4" : {
			"Shoofly\\" : "src/"
		}
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.7",
		"phpunit/phpunit": "^9.6"
	},
	"scripts": {
		"coverage" : "phpunit --coverage-html=.phpunit.cache/code-coverage/ --coverage-text",
		"phpunit" : "phpunit",
		"phpcs" : "phpcs --standard=phpcs.xml -n",
		"phpcbf" : "phpcbf --standard=phpcs.xml"
	}
}
